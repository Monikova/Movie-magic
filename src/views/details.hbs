            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>{{movie.title}}</h1>
                            <div class="card-movie">
                                <div class="first-info">
                                    <p class="card-genre">Genre: {{movie.genre}}</p>
                                    <p class="card-director">Directror: {{movie.director}}</p>
                                </div>
                                <div class="second-info">
                                    <p class="card-year">Year: {{movie.year}}</p>
                                    <p class="card-ranking">Rating: <span id="stars">&#x2605; &#x2605; &#x2605;
                                            &#x2605;</span></p>
                                </div>

                            </div>

                            <p class="disc">{{movie.description}}</p>
                        </div>
                    <div class="back">
                    {{!-- <div id="center-btn"> --}}
                            <a href="/attach/cast/{{movie._id}}" class="details">Attach New Cast</a>
                    </div>
                    </div>
                    <div class="card_right">
                        <img src="{{movie.imageUrl}}" alt="image">
                    </div>
                </div>

                <div class="main-cast-card">
                    {{#each movie.cast}}
                    <div class="cast-card">
                        <div class="card-img">
                            <img src="{{image}}"
                                alt="cast">
                        </div>
                        <div class="cast-info">
                            <h1>{{name}}</h1>
                            <h3>Age: {{age}}</h3>
                            <h3>Born: {{born}}</h3>
                            <h3>Name in Movie: {{name-in-movie}}</h3>
                        </div>
                    </div>
                    {{/each}}

                </div>
    </div>

    </section>

