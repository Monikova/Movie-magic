            {{#if search}}
            <section id="search">
                <h1>Search</h1>
                <form action="" method="POST" class="form">
                    <input type="text" class="search" name="search" placeholder="Title...">
                    <input type="text" name="" class="genre" placeholder="Genre...">
                    <input type="number" name="" class="year" placeholder="Year...">
                    <input type="submit" value="search">
                </form>
            </section>
            {{/if}}
        
            <section id="catalog">
                <h1>All Movies</h1>
                <div class="band">

                    <!-- If there are posts for creature in the database display each of them -->
                    {{#each movies}}
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src="{{imageUrl}}"
                                alt="Jungle-Cruise">
                        </div>
                        <div class="back">
                            <h1>{{title}}</h1>
                            <h2>Genre: {{genre}}</h2>
                            <p>Description: {{description}}</p>
                            <a href="/details/{{_id}}" class="details">Details</a>
                        </div>
                    </div>
                    <!-- If there are still no posts in the database display: -->
                    {{else}}
                    <div class="no-posts">
                        <p class="no-offer">There are no posts yet...</p>
                    </div>
                    {{/each}}
                </div>
            </section>
